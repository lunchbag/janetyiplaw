html,body{background-color:#fff;width:100%;margin:0}h1,h2,h3{font-family:"Volkorn";font-style:italic;font-weight:300}h1{font-size:2.5rem;padding-bottom:24px;text-align:center}p{font-size:1.1rem;line-height:1.6rem;margin-bottom:24px;font-weight:300;font-family:"Noto Serif"}.container{margin:0 auto;width:920px}@media (max-width: 1200px){.container{width:780px}}@media (max-width: 850px){.container{width:600px}}@media (max-width: 650px){.container{padding-left:20px;padding-right:20px;box-sizing:border-box}}footer{width:100%;margin-bottom:32px}footer>p{font-size:0.9rem;text-align:center}#nav{height:100px;width:100%;margin:0;padding:0;list-style:none;display:flex;align-items:center;justify-content:space-around;background-color:#fff;border-bottom:1px solid #efefef;z-index:20;font-family:"Noto Serif"}#nav.sticky{position:fixed;top:0;left:0}#nav li{text-align:center;width:200px}.section#intro{display:flex;flex-direction:column;justify-content:center;height:100vh;padding:0}.section#intro>h1{text-align:left}.sticky#intro{margin-bottom:105px}.section{padding:128px 0}.carousel{width:100%;list-style:none;margin:0;padding:0;display:flex}.carousel>li{display:block;height:200px;width:25%;border:1px solid #fff;background-size:cover;background-position:center;position:relative;top:0;-webkit-filter:grayscale(100%);filter:grayscale(100%);transition:all 0.1s linear}.carousel>li:hover{-webkit-filter:grayscale(0%);filter:grayscale(0%);top:-50px;height:300px;width:27.5%}.carousel>li:hover{cursor:pointer;z-index:10;border:1px solid #dedede}ul.links{list-style:none;margin:48px 0;padding:0;text-align:center}ul.links>li{font-size:1.4rem;margin:12px;font-weight:200}
