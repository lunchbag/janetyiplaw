closeBtn.addEventListener("click",function(e){closePreview();});document.onkeydown=function(evt){evt=evt||window.event;((evt.key&&(isEscape=evt.key=="Escape"||evt.key=="Esc"))||evt.keyCode==27)&&closePreview();};function closePreview(){previewDialog.classList.remove("visible");document.body.classList.remove("no-scroll");}},false);